{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "react",
    "jsx-a11y",
    "import"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": {
          "resolve": {
            "extensions":[".js", ".jsx"],
            "modules": ["src", "node_modules", "lib"],
            "alias": {
              "shared" : "shared"
            }
          }
        }
      }
    }
  },
  "globals": {
    "document": false,
    "require": false,
    "window": false,
    "BACKEND_PUBLIC_URL": false,
    "Generator": false,
    "React$Element": false
  },
  "env": {
    "mocha": true
  },
  "rules": {
    "eqeqeq": 0,
    "no-use-before-define": 0,
    "arrow-body-style": 0,
    "no-unused-vars": [2, { "ignoreRestSiblings": true }],
    "react/jsx-filename-extension": [2, { "extensions": [".js", ".jsx"] }],
    "react/prefer-stateless-function": [0],
    "react/no-unused-prop-types": [0, { "skipShapeProps": true }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true, "optionalDependencies": false, "peerDependencies": false}],
    "import/prefer-default-export": [0],
    "jsx-a11y/no-static-element-interactions": [0],
    "quote-props": [0],
    "no-console": [1, { "allow": ["warn", "error"] }],
    "react/sort-comp": [2, {
      "groups": {
        "lifecycle": [
          "displayName",
          "propTypes",
          "contextTypes",
          "childContextTypes",
          "mixins",
          "statics",
          "defaultProps",
          "constructor",
          "getDefaultProps",
          "getInitialState",
          "props",
          "state",
          "getChildContext",
          "componentWillMount",
          "componentDidMount",
          "componentWillReceiveProps",
          "shouldComponentUpdate",
          "componentWillUpdate",
          "componentDidUpdate",
          "componentWillUnmount"
        ]
      }
    }]
  }
}
